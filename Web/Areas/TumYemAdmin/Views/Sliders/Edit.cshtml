@model Entities.Slider

@{
    ViewData["Title"] = "Redaktə Et";
    ViewData["Link"] = "Slaydlar";
}
<style>
    .label-photo {
        background: gold;
        padding: 10px 20px;
        color: #fff;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 5px;
    }

    a {
        text-decoration: none;
        margin: 15px 0;
    }
</style>
<h1>
    Redaktə Et
</h1>
 
<h4>Slayd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BackgroundPhoto" />
            <div class="form-group">
                <label asp-for="HeaderLeft" class="control-label"></label>
                <input asp-for="HeaderLeft" class="form-control" />
                <span asp-validation-for="HeaderLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderRight" class="control-label"></label>
                <input asp-for="HeaderRight" class="form-control" />
                <span asp-validation-for="HeaderRight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="d-none" name="NewBackgroundPhoto" id="NewBackgroundPhoto" type="file" />
                <label class="label-photo control-label" for="NewBackgroundPhoto"> Yeni Şəkil</label>
            </div>
             <div class="form-group">
                <label class="d-block font-weight-bold">Köhnə İkon</label>
                @if(Model.BackgroundPhoto!=null)
                {
                    <img src="@Model.BackgroundPhoto" width="100" />
                    
                }
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsShow" /> @Html.DisplayNameFor(model => model.IsShow)
                </label>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Yadda Saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
