@model Entities.Category
@{
    ViewData["Title"] = "Redaktə Et";
    ViewData["Link"] = "Kateqoriyalar";
}
<style>
    .label-photo {
        background: gold;
        padding: 10px 20px;
        color: #fff;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 5px;
    }

    a {
        text-decoration: none;
        margin: 15px 0;
    }
</style>
<h1>
    Redaktə Et
</h1>
 
<h4>Kateqoriya</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
          <div class="form-group">
                <input class="d-none" name="NewIcon" id="NewIcon" type="file" />
                <label class="label-photo control-label" for="NewIcon"> Yeni İkon</label>
            </div>
             <div class="form-group">
                <label class="d-block font-weight-bold">Köhnə İkon</label>
                @if(Model.IconUrl!=null)
                {
                    <img src="@Model.IconUrl" width="100" />
                    
                }
            </div>
            <input asp-for="IconUrl" type="hidden" />
            <input asp-for="ID" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

