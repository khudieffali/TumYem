@model Entities.Category
@{
    ViewData["Title"]=" Kateqoriya Yarat";
    ViewData["Link"]= "Kateqoriyalar";
}
<style>
    .label-photo {
        background: gold;
        padding: 10px 20px;
        color: #fff;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 5px;
    }

    a {
        text-decoration: none;
        margin: 15px 0;
    }
</style>

<h1>Yeni Kateqoriya</h1>
<hr />


<div class="row">
    <div class="col-md-4">
        
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="IconUrl" class="control-label label-photo"></label>
                <input asp-for="IconUrl"  class="form-control d-none" type="file"  />
                <span asp-validation-for="IconUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yarat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


